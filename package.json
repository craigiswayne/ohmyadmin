{
  "name": "ohmyadmin",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:demo": "ng serve --project demo",
    "start:storybook": "ng run component-library:storybook",
    "build": "ng build --stats-json",
    "build:ohmyadmin": "npm run build:component-library && npm run build -- ohmyadmin",
    "build:demo": "npm run build -- demo",
    "build:component-library": "ng build component-library",
    "build:component-library:watch": "npm run build:component-library -- --watch",
    "build:storybook": "ng run component-library:build-storybook",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci:ohmyadmin": "ng test --no-watch --no-progress --code-coverage --browsers=ChromeHeadless --project ohmyadmin",
    "test:ci:demo": "ng test --no-watch --no-progress --code-coverage --browsers=ChromeHeadless --project demo",
    "test:ci:component-library": "ng test --no-watch --no-progress --code-coverage --browsers=ChromeHeadless --project component-library",
    "serve:ssr:demo": "node dist/demo/server/server.mjs"
  },
  "engines": {
    "node": ">=24.12.0 <25.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.1",
    "@angular/compiler": "^21.0.1",
    "@angular/core": "^21.0.1",
    "@angular/forms": "^21.0.1",
    "@angular/platform-browser": "^21.0.1",
    "@angular/platform-server": "^21.0.1",
    "@angular/router": "^21.0.1",
    "@angular/ssr": "^21.0.1",
    "express": "^5.2.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.1",
    "@angular/cli": "^21.0.1",
    "@angular/compiler-cli": "^21.0.1",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.0.0",
    "typescript": "~5.9.2",
    "storybook": "^10.1.8",
    "@storybook/angular": "^10.1.8",
    "@storybook/addon-a11y": "^10.1.8",
    "@storybook/addon-docs": "^10.1.8",
    "@storybook/addon-onboarding": "^10.1.8",
    "@angular-devkit/build-angular": "^21.0.1",
    "@angular-devkit/architect": "^0.2100.1",
    "@angular-devkit/core": "^21.0.1",
    "@angular/platform-browser-dynamic": "^21.0.1",
    "@compodoc/compodoc": "^1.1.32"
  }
}
